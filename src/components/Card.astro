---
import { fade } from "astro:transitions";
import { Image } from 'astro:assets';
import MovieVote from '@components/MovieVote.jsx';
interface Props {
	key: number;
	title: string;
	release: string;
	href: string;
	body?: string;
	image: string;
}

const { key , href, title, release, body, image} = Astro.props;
---

<li class="card" transition:animate={fade({ duration: "2s" })}>
	<div class="card-wrapper">
		<div class="head">
			<a href={href}>
				<Image
					class="poster"
					src={image}
					alt={title}
					width="220"
					height="320"
					loading="lazy"/>
			</a>
			<h2><a href={href}>{title} <span>&rarr;</span></a></h2>
			<p>{release}</p>
			<div class="excerpt" set:html={body}></div>
		</div>
		<MovieVote client:load movieId={key} />
	</div>
</li>

<style>
	.card {
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.card-wrapper {
		width: 100%;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		background-color: #23262d;
		opacity: 0.8;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	h2{
		margin: 0;
	}
	h2 a {
		font-size: 1.25rem;
		display: block;
		color: white;
		text-decoration: none;
		line-height: 1.4;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.poster {
		width: 100%;
		border-radius: 6px;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--gradientaccent-);
	}
	.card:is(:hover, :focus-within) .card-wrapper {
		color: rgb(var(--accent-light));
	}
</style>
